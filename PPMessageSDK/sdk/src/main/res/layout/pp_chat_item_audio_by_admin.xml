<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <com.ppmessage.sdk.core.ui.view.CircularImageView
        android:id="@+id/pp_chat_item_audio_by_admin_user_avatar"
        android:layout_width="@dimen/pp_chat_item_user_avatar_width"
        android:layout_height="@dimen/pp_chat_item_user_avatar_width"
        android:src="@drawable/pp_icon_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/pp_chat_item_audio_by_admin_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pp_chat_item_left_bubble_bg_style"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pp_chat_item_audio_by_admin_audio_image"
                android:layout_width="@dimen/pp_chat_item_audio_attachment_width"
                android:layout_height="@dimen/pp_chat_item_audio_attachment_width"
                android:contentDescription="@string/pp_common_content_desc"
                android:src="@drawable/pp_receiver_voice_node_playing" />

        </LinearLayout>

        <include
            android:id="@+id/pp_chat_item_audio_by_admin_message_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            layout="@layout/pp_chat_item_extra" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0&quot;"
        android:id="@+id/pp_chat_item_audio_by_admin_duration"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp" />

</LinearLayout>
